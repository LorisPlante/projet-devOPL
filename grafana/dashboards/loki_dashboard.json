{
    "title": "Loki Monitoring Dashboard",
    "uid": "loki-monitoring",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "schemaVersion": 39,
    "version": 1,
    "tags": ["loki", "Prometheus"],
    "panels": [
      {
        "title": "GC CPU Time",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(go_cpu_classes_gc_total_cpu_seconds_total{job=\"loki\"}[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          },
          "overrides": []
        },
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "title": "Goroutines",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "go_goroutines{job=\"loki\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none"
          },
          "overrides": []
        },
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "title": "Heap Allocation",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "go_memstats_heap_alloc_bytes{job=\"loki\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          },
          "overrides": []
        },
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "title": "Scrape Duration (Loki)",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "scrape_duration_seconds{job=\"loki\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          },
          "overrides": []
        },
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      },
      {
        "title": "Target Up (Loki)",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "up{job=\"loki\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          },
          "overrides": []
        },
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
      },
      {
        "title": "Scraped Samples (Loki)",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(scrape_samples_scraped{job=\"loki\"}[1m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          },
          "overrides": []
        },
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8}
      }
    ]
  }